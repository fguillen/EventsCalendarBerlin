<div class="card event" data-date="<%= calendar_event.date_time.to_s(:datedb) %>" data-event-id="<%= calendar_event.id %>">
  <% if !calendar_event.pics.empty? %>
    <img class="card-img" src="<%= calendar_event.pics.first %>" alt="<%= calendar_event.title %>">

    <div class="card-img-overlay" style="z-index: 1">
      <div class="row">
        <div class="col">
          <h2><%= render_label(calendar_event.venue.name, :tags) %></h2>
          <p>
            <%= render_labels(calendar_event.tags, :tags) %>
          </p>
        </div>
        <div class="col text-right">
          <h6><span class="badge badge-primary"><%= calendar_event.date_time.to_s(:datehuman) %></span></h6>
          <h3><span class="badge badge-primary"><%= calendar_event.date_time.to_s(:hour) %></span></h3>
        </div>
      </div>
    </div>
  <% end %>

  <div class="card-body" style="z-index: 10">
    <% if calendar_event.pics.empty? %>
      <div class="row">
        <div class="col">
          <h2><%= render_label(calendar_event.venue.name, :tags) %></h2>
          <p>
            <%= render_labels(calendar_event.tags, :tags) %>
          </p>
        </div>
        <div class="col text-right">
          <h6><span class="badge badge-primary"><%= calendar_event.date_time.to_s(:datehuman) %></span></h6>
          <h3><span class="badge badge-primary"><%= calendar_event.date_time.to_s(:hour) %></span></h3>
        </div>
      </div>
    <% end %>
    <h5 class="card-title"><%= calendar_event.title %></h5>
    <p class="card-text"><%= calendar_event.info.join.truncate(140) %></p>
  </div>

  <div class="card-body" style="z-index: 10">
    <a href="#" class="card-link">Card link</a>
    <a href="<%= calendar_event.url %>" class="card-link">Info</a>
  </div>
</div>
